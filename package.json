{
  "name": "@very-amused/argon2-wasm",
  "version": "0.2.2-rc1",
  "description": "Implementation of the argon2 key derivation function using WebAssembly and Typescript, to be run clientside in web applications.",
  "main": "runtime/index.js",
  "module": "runtime.index.mjs",
  "repository": "git+https://github.com/very-amused/argon2-wasm",
  "author": "very-amused <very-amused@pm.me>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "build:all": "make && yarn run build",
    "clean": "rm -rf demo/static/[!demo]*.{js,wasm} build runtime",
    "build:demo": "cp runtime/index.mjs demo/static/argon2.js && cp build/*.{js,wasm} demo/static/",
    "predemo": "yarn run build:demo",
    "demo": "node demo/server.js",
    "build:docs": "typedoc --plugin typedoc-plugin-markdown --readme docs_readme.md src/index.ts --out docs/",
    "prepack": "yarn run build:all"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/polka": "^0.5.2",
    "polka": "^0.5.2",
    "rollup": "^2.45.2",
    "rollup-plugin-terser": "^7.0.2",
    "serve-static": "^1.14.1",
    "terser": "^5.5.1",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typedoc": "^0.20.36",
    "typedoc-plugin-markdown": "^3.7.2",
    "typescript": "^4.2.4"
  }
}
