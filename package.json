{
  "name": "@very-amused/argon2-wasm",
  "version": "0.3.2",
  "description": "Implementation of the argon2 key derivation function using WebAssembly and Typescript, to be run clientside in web applications.",
  "main": "runtime/index.js",
  "type": "module",
  "repository": "git+https://github.com/very-amused/argon2-wasm",
  "author": "very-amused <very-amused@pm.me>",
  "license": "MIT",
  "scripts": {
    "build": "make && rollup -c",
    "postbuild": "yarn tsc -b tsconfig-d.json",
    "clean": "make clean",
    "demo": "snowpack dev",
    "prebuild:demo": "yarn build:all",
    "build:demo": "snowpack build",
    "build:docs": "typedoc --plugin typedoc-plugin-markdown --readme docs_readme.md src/index.ts --out docs/",
    "prepack": "yarn clean && yarn build && yarn build:docs"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.1",
    "@snowpack/plugin-typescript": "^1.2.1",
    "rollup": "^2.45.2",
    "rollup-plugin-terser": "^7.0.2",
    "snowpack": "^3.8.8",
    "terser": "^5.15.0",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typedoc": "^0.23.13",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.8.2"
  }
}
