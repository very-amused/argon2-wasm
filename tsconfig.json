{
  "compilerOptions": {
    "lib": [
      "DOM",
      "WebWorker"
    ],
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true,
    "stripInternal": true
  },
  "include": [
    "src/*.ts"
  ]
}
